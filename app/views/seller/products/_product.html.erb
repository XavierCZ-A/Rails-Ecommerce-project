<tr class="bg-white border-b hover:bg-gray-200">
  <td class="w-4 p-4">
    <div class="flex items-center">
      <input id="checkbox-table-search-<%= product.id %>" type="checkbox" class="w-4 h-4 text-blue-600 bg-white rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-white focus:ring-2  dark:border-gray-600">
      <label for="checkbox-table-search-<%= product.id %>" class="sr-only">checkbox</label>
    </div>
  </td>
  <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-black">
    <%= product.title %>
  </th>
  <td class="px-6 py-4 text-black">
    <%= product.category.name %>
  </td>
  <td class="px-6 py-4 text-black">
    <%= number_to_currency(product.price) %>
  </td>
  <td class="px-6 py-4 text-black">
    <%= enum_l(product, :status) %>
  </td>
  <td class="px-6 py-4 text-black">
    <%= link_to "View", product_path(product), class: "rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </td>
</tr>

