<article id="<%= dom_id product %>" class="p-6 flex" data-controller="image">
  <!-- Contenedor de imÃ¡genes en miniatura -->
  <div class="flex flex-col mr-4">
    <% if product.images.attached? %>
      <% product.images.each do |image| %>
        <figure class="w-24 h-24 overflow-hidden">
          <%= image_tag image, class: 'rounded-lg w-full h-full object-cover cursor-pointer mb-2 transition-transform duration-300 transform hover:scale-105', data: { action: 'click->image#change' } %>
        </figure>
      <% end %>
    <% else %>
      <p>No images available</p>
    <% end %>
  </div>

  <!-- Contenedor de imagen principal -->
  <div class="max-w-sm bg-white border border-red-500 rounded-lg shadow-lg overflow-hidden" >
    <% if product.images.attached? %>
      <figure class="w-full h-64"> <!-- Altura fija para la imagen principal -->
        <%= image_tag product.images.first, id: 'main-image', class: 'w-full h-full object-cover', data: { image_target: 'mainImage' } %>
      </figure>
    <% else %>
      <%= image_tag 'placeholder.jpg', class: 'w-full h-full object-cover'%>
    <% end %>
  </div>
</article>
