<div class="w-full px-5 py-5">
  <% content_for :title, "Stocks" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('views.stock.stocks') %></h1>
    <%= link_to "Create stock", new_stock_path, class: "text-center rounded-lg py-3 px-5 bg-indigo-600 inline-block font-medium text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-gray-300 dark:focus:ring-gray-600" %>
  </div>

  <section class="mt-3 relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-white border dark:text-gray-400">
      <tr>
        <th scope="col" class="p-4">
          <div class="flex items-center">
            <input id="checkbox-all-search" type="checkbox" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:border-gray-600">
            <label for="checkbox-all-search" class="sr-only">checkbox</label>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= t('views.stock.product') %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= t('views.stock.quantity') %>
        </th>
        <th scope="col" class="px-6 py-3">
          Action
        </th>
      </tr>
      </thead>
      <tbody>
      <% @stocks.each do |stock| %>
        <%= render partial: 'stock', locals: { stock: stock } %>
      <% end %>
      </tbody>
    </table>
  </section>
</div>

