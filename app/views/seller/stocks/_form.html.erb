<div class="max-w-3xl bg-white shadow-md rounded-lg border px-8 pt-6 pb-8 mb-4">
  <%= form_with(model: stock, class: "contents") do |form| %>

    <% if stock.errors.any? %>
      <div id="error_explanation" class="bg-red-100 text-red-700 px-3 py-2 font-medium rounded-lg mt-3 border border-red-400">
        <h2><%= t('activerecord.errors.models.stock.save_error') %></h2>

        <ul>
          <% stock.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="my-5">
      <%= form.label :quantity do  %>
        <%= t('forms.stocks.quantity') %><span class="text-red-500">*</span>
      <% end %>
      <%= form.number_field :quantity, class: "block appearance-none bg-transparent border-none w-full text-gray-700 py-1 px-2 leading-tight focus:outline-none focus:ring-0 focus:border-transparent" %>
      <div class="border-b border-gray-300 mt-1"></div>
    </div>

    <% if stock.product_id.nil? %>
      <div class="my-5">
        <%= form.label :product_id do %>
          <%= t('forms.stocks.products') %><span class="text-red-500">*</span>
        <% end %>
        <%= form.collection_select :product_id, Product.all, :id, :title, {}, { class: "block appearance-none bg-transparent border-none w-full text-gray-700 py-1 px-2 leading-tight focus:outline-none focus:ring-0 focus:ring-blue-500 focus:border-transparent" } %>
        <div class="border-b border-gray-300 mt-1"></div>
      </div>
    <% else %>
      <%= form.hidden_field :product_id %>
    <% end %>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

</div>

